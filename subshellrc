. .bashrc
cd

function disabled
{
    echo "There's no rabbit here, try again!"
}

function in_rabbit_hole
{
    if [ -n "`echo "$1" | grep -iE 'rabbithole\/?$'`" ]; then
        return 1
    fi

    return 0
}

function override_cd
{
    in_rabbit_hole $1
    rv=$?

    if [ $rv -eq 1 ]; then
        echo "There he is ..."
        sleep 3
        \exit >/dev/null 2>/dev/null
    else
        disabled
    fi
}

alias cd=override_cd
alias exit=disabled
alias reboot=disabled
alias logout=dsabled
alias halt=disabled
