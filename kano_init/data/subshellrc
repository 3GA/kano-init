cd
. .bashrc

export PS1="          $PS1"

function disabled
{
    echo "          There's no rabbit here, try again!"
}

function in_rabbit_hole
{
    if [ -n "`echo "$1" | grep -iE 'rabbithole\/?$'`" ]; then
        return 1
    fi

    return 0
}

function override_cd
{
    in_rabbit_hole $1
    rv=$?

    if [ $rv -eq 1 ]; then
        \exit >/dev/null 2>/dev/null
    else
        disabled
    fi
}

alias cd=override_cd
alias exit=disabled
alias reboot=disabled
alias logout=disabled
alias halt=disabled
alias sudo=disabled
alias startx=disabled
alias su=disabled
alias rm=disabled
alias find=disabled
alias bc=disabled
